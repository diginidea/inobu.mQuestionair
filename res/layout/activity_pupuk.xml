<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.80" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lbShape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ShapeID = "
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/shapesIDspupk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:lines="1"
                    android:textIsSelectable="true"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/lbAsalPupuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1. Asal pupuk yang digunakan paling sering digunakan :"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/rgAsal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/rbpDinasKebun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dinas Perkebunan"
                        android:textSize="13sp" />

                    <RadioButton
                        android:id="@+id/rbpKUD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KUD"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/txpKUD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="-33dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName|textCapWords"
                        android:textSize="13sp" />

                    <RadioButton
                        android:id="@+id/rbpPerusahaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perusahaan"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/txpPerusahaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="-33dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName|textCapWords"
                        android:textSize="13sp" />

                    <RadioButton
                        android:id="@+id/rbpBeli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beli di"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/txpBeli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="-33dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName|textCapWords"
                        android:textSize="13sp" />
                </RadioGroup>
            </RelativeLayout>

            <TextView
                android:id="@+id/lbJenisPupuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2. Jenis Pupuk :"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/rbpNPK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NPK"
                    android:textSize="13sp" />

                <CheckBox
                    android:id="@+id/rbpUrea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urea"
                    android:textSize="13sp" />

                <CheckBox
                    android:id="@+id/rbpBorat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Borat"
                    android:textSize="13sp" />

                <CheckBox
                    android:id="@+id/rbpHCL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HCL"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/rbpLain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/txPpLain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:ems="10"
                        android:inputType="textPersonName|textCapWords"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/lbJmlPupuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3. Jumlah Penggunaan Pupuk Sekali Pemupukan :"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rbJmNPK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NPK"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/txJmlNPK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txkgnpk"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="Kg"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rbJmUrea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urea"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/txJmlUrea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txkgurea"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="Kg"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rbJmBorat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Borat"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/txJmlBorat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txkgborat"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="Kg"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rbJmHCL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HCL"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/txJmlHCL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txkghcl"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="Kg"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rbJmLain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/txJmlLain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txkglain"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="Kg"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4. Apakah anda mencampur pupuk tersebut dengan pupuk atau bahan lainnya :"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioGroup
                    android:id="@+id/rgcampur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/rbPupukYa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ya"
                        android:textSize="13sp" />

                    <RadioButton
                        android:id="@+id/rbPupukTidak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak"
                        android:textSize="13sp" />
                </RadioGroup>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutPupuk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5. Jika ya, dengan pupuk/ bahan jenis apa yang anda campurkan?"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/txJkCampur"
                    android:layout_width="443dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName|textCapWords"
                    android:textSize="13sp" >
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutsimpandata"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="3" >

        <Button
            android:id="@+id/btSimpanData"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Simpan Data"
            android:textSize="13sp"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>